{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["node", "jest"]
  },
  "include": ["app/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}