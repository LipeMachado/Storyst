{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "rootDir": "./app",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["app/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}